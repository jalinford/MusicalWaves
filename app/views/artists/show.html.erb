<article id="artist">
	<h2><%= @artist.name %></h2>
	<h5><%= @artist.instrument %></h5>
	<% if !@artist.picture.empty? %>
		<a href="<%= @artist.picture %>" class="b_img"><img src="<%= @artist.picture %>" alt="" class="b_img" /></a>
	<% end %>
	<section class="text">
		<p>
			<%= @artist.bio.gsub(/\n/, '</p><p>').html_safe %>
		</p>
	</section>
</article>

