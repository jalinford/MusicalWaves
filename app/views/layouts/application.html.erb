<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/header' %>

<div id="wrapper">
	<div id="page" class="container">
		<div id="sidebar">
			<%= render 'layouts/sidebar' %>
		</div>
		
		<div id="content">
			
			<%= yield %>

		</div>
	</div>
</div>

<%= render 'layouts/footer' %>

</body>
</html>
